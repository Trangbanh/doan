@using Fruit.Base.Models
@model Bill
@{
    ViewData["Title"] = "BillDetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var codeOrder = string.Empty;
    if(Model != null)
    {
        codeOrder = Model.OrderCode;
    }
}
<input type="hidden" id="ipIdBillHidden" value="@Model.Idbill" />
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Chi tiết đơn hàng <span class="text-danger">@codeOrder</span></h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Chi tiết đơn hàng <span class="text-danger">@codeOrder</span></li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Chi tiết đơn hàng <span class="text-danger">@codeOrder</span></h4>
            </div>
            <div class="card-body">              
                <table class="table table-centered align-middle" id="tblBillDetail">
                </table>
                <div class="row">
                    <div class="col-md-9"></div>
                    <div class="col-md-3">
                        <h4>Tổng hóa đơn: <span id="totalPriceOrder"></span></h4>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div>

