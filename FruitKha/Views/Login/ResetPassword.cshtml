
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Bạn quên mật khẩu?</p>
					<h1>Quên mật khẩu</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="checkout-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="checkout-accordion-wrap">
					<div class="accordion" id="accordionExample">
						<div class="card single-accordion">
							<div class="card-header" id="headingOne">
								<h5 class="mb-0">
									<button class="btn btn-link" type="button" aria-expanded="true">
										Quên mật khẩu
									</button>
								</h5>
							</div>

							<div id="collapseOne">
								<div class="card-body">
									<div class="billing-address-form">
										<form id="frmResetPassword">
											<p><input type="text" id="ipPhoneNumber" placeholder="Số điện thoại"></p>
											<p><input type="password" id="ipPasswordNew"  placeholder="Mật khẩu mới"></p>
											<p><input type="password" id="ipConfirmPassword" placeholder="Xác nhận mật khẩu"></p>
										</form>
										<div class="mt-3">
											<button class="btn btn-success w-100" id="btnResetPassword" type="button">Đặt lại mật khẩu</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

