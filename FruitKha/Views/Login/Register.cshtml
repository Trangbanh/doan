
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Đăng ký thông tin tài khoản</p>
					<h1>Đăng ký</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="checkout-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="checkout-accordion-wrap">
					<div class="accordion" id="accordionExample">
						<div class="card single-accordion">
							<div class="card-header" id="headingOne">
								<h5 class="mb-0">
									<button class="btn btn-link" type="button" aria-expanded="true">
										Đăng ký
									</button>
								</h5>
							</div>

							<div id="collapseOne">
								<div class="card-body">
									<div class="billing-address-form">
										<form id="frmRegister">
											<p><input type="text" name="Name" placeholder="Họ và tên"></p>
											<p><input type="text" name="PhoneNumber" placeholder="Số điện thoại"></p>
											<p><input type="text" name="UserName" placeholder="Tài khoản"></p>
											<p><input type="password" name="Password" placeholder="Mật khẩu"></p>
											<p><input type="password" name="ConfirmPassword" placeholder="Xác nhận mật khẩu"></p>
										</form>
										<div class="mt-3">
											<button class="btn btn-success w-100" id="btnRegister" type="button">Đăng ký</button>
										</div>									
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

