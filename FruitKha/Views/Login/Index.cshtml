
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Đăng nhập vào hệ thống</p>
					<h1>Đăng nhập</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="checkout-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="checkout-accordion-wrap">
					<div class="accordion" id="accordionExample">
						<div class="card single-accordion">
							<div class="card-header" id="headingOne">
								<h5 class="mb-0">
									<button class="btn btn-link" type="button" aria-expanded="true">
										Đăng nhập
									</button>
								</h5>
							</div>

							<div id="collapseOne">
								<div class="card-body">
									<div class="billing-address-form">
										<form action="index.html">
											<p><input type="text" id="username" placeholder="Tài khoản"></p>
											<p><input type="password" id="password"  placeholder="Mật khẩu"></p>
										</form>
										<div class="mt-3">
											<button class="btn btn-success w-100" id="btnLogin" type="button">Đăng nhập</button>
										</div>
										<p class="mt-1 mb-0">Bạn chưa có tài khoản? <a href="/Login/Register">Đăng ký</a></p>
										<a class="mt-0" href="/Login/ResetPassword">Quên mật khẩu?</a>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

